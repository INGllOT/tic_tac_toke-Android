<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/szary">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TIC_TAC_TOE"
    android:layout_gravity="center"
    android:textColor="@color/white"
    android:textSize="50dp"
    android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/gracz1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GRACZ 1: "
            android:textSize="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="110dp"/>

        <TextView
            android:id="@+id/gracz2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GRACZ 2: "
            android:layout_gravity="center"
            android:textSize="30dp"
            android:layout_marginTop="50dp"
            />

        <Button
            android:id="@+id/startId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:text="START"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            />

        <Button
            android:id="@+id/resetId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp" android:layout_gravity="center"
        android:text="RESTET"

        />

    </LinearLayout>
</LinearLayout>